{
  "name": "portfolio-site",
  "version": "0.0.0",
  "private": true,
  "description": "Deterministic environment skeleton (Sprint-00)",
  "license": "UNLICENSED",
  "engines": {
    "node": "20.11.0",
    "npm": "10.2.4"
  },
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "tailwind:build": "tailwindcss -i ./src/app/globals.css -o ./build.css",
    "test": "npm run test:e2e",
    "test:e2e": "npm run build && playwright test",
    "test:unit": "tsx --tsconfig tsconfig.test.json --test tests/unit/*.test.*",
    "lighthouse:mobile": "lhci autorun --config=.lighthouserc.mobile.json",
    "lighthouse:desktop": "lhci autorun --config=.lighthouserc.desktop.json",
    "lighthouse:ci": "npm run lighthouse:mobile && npm run lighthouse:desktop",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "gray-matter": "4.0.3",
    "next": "14.2.35",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "4.10.2",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "1.57.0",
    "@types/node": "25.0.3",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "autoprefixer": "10.4.19",
    "eslint": "8.56.0",
    "eslint-config-next": "14.2.35",
    "postcss": "8.4.38",
    "tailwindcss": "3.4.17",
    "tsx": "4.20.5",
    "typescript": "5.3.3"
  }
}
